<li class="card text-center me-4 mb-3">
    <div class="card-body">
        <div class="card-header">
            <h3 class="card-title">{{customer_name}}</h3>

            <button class="change-active btn btn-dark btn-sm" data-id="{{id}}" data-newactive="{{newActive}}">
                {{#if active_customer}}Deactivate Customer{{else}}Reactivate Customer{{/if}}
            </button>
            <button class="delete-customer btn btn-danger btn-sm" data-id="{{id}}">x</button>
        </div>

        <ul class="card-text">
            <li>
                <strong>Business Address:</strong> {{business_address}}
            </li>
            <li>
                <strong>Billing Address:</strong> {{billing_address}}
            </li>
            <li>
                <strong>Contact Name:</strong> {{contact_name}}
            </li>
            <li>
                <strong>Normal Service Rate:</strong> ${{service_rate}}
            </li>
        </ul>
    </div>
</li>