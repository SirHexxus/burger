<h1>Customer Tracker</h1>

<h2>Active Customers</h2>

<ul>
  {{#each customers}}
  {{#if active_customer}}
  {{> customers/customer-block newActive=0}}
  {{/if}}
  {{/each}}
</ul>

<h2>Inactive Customers (Kept For Records)</h2>

<ul>
  {{#each customers}}
  {{#unless active_customer}}
  {{> customers/customer-block newActive=1}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a New Customer</h2>
<form class="create-form">

  <div class="mb-3">
    <label for="customerName" class="form-label">Customer's Name:</label>
    <input type="text" class="form-control" id="customerName" name="name">
  </div>
  <div class="mb-3">
    <label for="businessAddress" class="form-label">Customer's Physical Address:</label>
    <input type="text" class="form-control" id="businessAddress" busAddress="busAddress">
  </div>
  <div class="mb-3">
    <label for="billingAddress" class="form-label">Customer's Billing Address:</label>
    <input type="text" class="form-control" id="billingAddress" billAddress="billAddress">
  </div>
  <div class="mb-3">
    <label for="contactName" class="form-label">Customer's Contact Name:</label>
    <input type="text" class="form-control" id="contactName" contact="contact">
  </div>
  <div class="mb-3">
    <label for="serviceRate" class="form-label">Customer's Normal Service Rate:</label>
    <input type="text" class="form-control" id="serviceRate" rate="rate">
  </div>

  <button type="submit" class="btn btn-primary">Submit New Customer</button>
</form>