<h1>Customer Tracker</h1>

<div class="card mb-3 bg-primary">
  <h2 class="card-title text-white">Active Customers</h2>

  <ul class="card-text mb-3">
    {{#each customers}}
    {{#if active_customer}}
    {{> customers/customer-block newActive=0}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div class="card mb-3 bg-primary">
  <h2 class="card-title text-white">Inactive Customers (Kept For Records)</h2>

  <ul class="card-text mb-3">
    {{#each customers}}
    {{#unless active_customer}}
    {{> customers/customer-block newActive=1}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="card mb-3 bg-primary">
  <h2 class="card-title text-white">Add a New Customer</h2>
  <form class="create-form card-text">

    <div class="row mb-3">
      <div class="col-sm-2"></div>
      <label for="customerName" class="col-sm-3 col-form-label text-white">Customer's Name:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" id="customerName" name="name">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2"></div>
      <label for="businessAddress" class="col-sm-3 col-form-label text-white">Customer's Physical Address:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" id="businessAddress" busAddress="busAddress">
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2"></div>
      <label for="billingAddress" class="col-sm-3 col-form-label text-white">Customer's Billing Address:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" id="billingAddress" billAddress="billAddress">
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2"></div>
      <label for="contactName" class="col-sm-3 col-form-label text-white">Customer's Contact Name:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" id="contactName" contact="contact">
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2"></div>
      <label for="serviceRate" class="col-sm-3 col-form-label text-white">Customer's Normal Service Rate:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" id="serviceRate" rate="rate">
      </div>
      <div class="col-sm-2"></div>
    </div>

    <button type="submit" class="mb-3 btn btn-warning">Submit New Customer</button>
  </form>
</div>