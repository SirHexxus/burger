<h1>Customer Tracker</h1>

<h2>Active Customers</h2>

<ul>
  {{#each customers}}
  {{#if active_customer}}
  {{> customers/customer-block newActive=0}}
  {{/if}}
  {{/each}}
</ul>

<h2>Inactive Customers (Kept For Records)</h2>

<ul>
  {{#each customers}}
  {{#unless active_customer}}
  {{> customers/customer-block newActive=1}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a New Customer</h2>
<form class="create-form">

  <div class="form-group">
    <label for="customerName">Customer's Name:</label>
    <input type="text" id="customerName" name="name">
  </div>
  <div class="form-group">
    <label for="businessAddress">Customer's Physical Address:</label>
    <input type="text" id="businessAddress" busAddress="busAddress">
  </div>
  <div class="form-group">
    <label for="billingAddress">Customer's Billing Address:</label>
    <input type="text" id="billingAddress" billAddress="billAddress">
  </div>
  <div class="form-group">
    <label for="contactName">Customer's Contact Name:</label>
    <input type="text" id="contactName" contact="contact">
  </div>
  <div class="form-group">
    <label for="serviceRate">Customer's Normal Service Rate:</label>
    <input type="text" id="serviceRate" rate="rate">
  </div>

  <button type="submit">Submit New Customer</button>
</form>


